  wireguard:
    image: lscr.io/linuxserver/wireguard
    container_name: wireguard
    cap_add:
      - NET_ADMIN
      - SYS_MODULE
    volumes:
      - /mnt/usb/wireguard:/config
      - /mnt/usb/lib/modules:/lib/modules
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=Europe/Paris
    sysctls:
      - net.ipv4.conf.all.src_valid_mark=1
    restart: unless-stopped
